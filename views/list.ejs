<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODOLIST</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&display=swap" rel="stylesheet">
</head>

<body>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <%newListItems.forEach(function(newListItem) {%>
            <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" onchange="this.form.submit()" name="toBeDeleted" value="<%=newListItem._id%>">
            <p><%=newListItem.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle%>">
    </form>
        <%});%>
  <form class="item" action="/" method="post">
      <input type="text" name="newI" placeholder="New Item">
      <button type="submit" name="button" value="<%=listTitle%>">+</button>
  </form>
</div>
</body>
</html>